<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium_2"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/jobicon"
        android:layout_width="50dp"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_height="50dp"
        tools:src = "@drawable/profile"/>
    <TextView
        android:id="@+id/jobtitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/jobicon"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textSize="@dimen/text_regular_3x"
        tools:text = "Developer/Senior Developer"/>
    <TextView
        android:id="@+id/jobcompany"
        android:layout_toRightOf="@id/jobicon"
        android:layout_width="wrap_content"
        android:layout_below="@id/jobtitle"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textSize="@dimen/text_regular_3x"
        tools:text = "Facebook"/>
    <TextView
        android:id="@+id/jobcountry"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toRightOf="@id/jobicon"
        android:layout_below="@id/jobcompany"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_regular"
        tools:text = "Singapore"/>
    <TextView
        android:id="@+id/jobdate"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "new"/>

</RelativeLayout>
