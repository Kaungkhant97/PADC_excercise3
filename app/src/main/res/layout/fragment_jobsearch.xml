<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaungkhantthu.padcexercise3.Linkedin_Fragment">

    <android.support.v7.widget.CardView
        android:id="@+id/alertLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="@dimen/margin_medium_3"
        android:layout_margin="@dimen/margin_medium_3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jobalert"
            android:layout_margin="@dimen/margin_medium_3"
            android:drawableLeft="@drawable/ic_notifications_active_black_24dp"
            android:padding="@dimen/margin_medium_3"
            android:drawablePadding="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/text_black_full"
            android:layout_height="wrap_content"
            android:text="Create Job alert"
            />
       <Switch
           android:id="@+id/alert_switch"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/margin_medium_3"
           android:padding="@dimen/margin_medium_3"
           android:layout_alignParentRight="true"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
<android.support.v7.widget.RecyclerView
    android:id="@+id/joblist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/alertLayout">

</android.support.v7.widget.RecyclerView>
</RelativeLayout>
